<Window x:Class="AdventOfCode.Views.Inputs.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventOfCode.Views.Inputs"
        mc:Ignorable="d"
        Background="Black"
        Foreground="Green"
        Title="Input Selection" Height="200" Width="400">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Green"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="An user input is required" 
               Foreground="Green"
               HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <TextBox x:Name="txtBox" VerticalAlignment="Center" Background="White" Grid.Row="1" Text="{Binding InputString}" Width="300" />

        <Button Grid.Row="2" Content="OK" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
    </Grid>
</Window>
